<Window x:Class="Osmium.GUI.Views.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Osmium.GUI.Views"
        mc:Ignorable="d"
        Title="Progress" Height="150" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        ShowInTaskbar="False">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
        <ProgressBar x:Name="ProgressBar" Height="20" Width="250" />
        <TextBlock x:Name="ProgressText" Margin="0,10,0,0" HorizontalAlignment="Center" />
    </StackPanel>
</Window>

